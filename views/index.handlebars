<script src="/js/index.js"></script>
<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        {{!--
        <h1>{{msg}}</h1> --}}
        <h1 class="text-center">MARBLE SODA GAME</h1>

        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="example-text">Username </label>
            <input type="text" id="example-text" class="form-control" aria-describedby="example-text" placeholder="Enter Example Text">
          </div>
          <div class="form-group">
            <label for="example-description">Example Description</label>
            <textarea class="form-control" id="example-description" aria-describedby="example-description" placeholder="Enter Example Description"></textarea>
          </div>
          <div class="form-group">
            <label for="example-score">Score</label>
            <input type="text" id="example-score" class="form-control" aria-describedby="example-score" placeholder="Enter Example Score">
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>

        <div class="card mt-4">
          <div class="card-body">
            <div class="webgl-content">
              <div id="gameContainer" style="width: 960px; height: 600px"></div>
              <div class="footer">
                <div class="webgl-logo"></div>
                <div class="fullscreen" onclick="gameInstance.SetFullscreen(1)"></div>
                <div class="title">Marble Soda</div>
              </div>


              <a href="/">← Back To Home</a>
              <div id="t" style="display: none">
                <img class="someClass" src="{{game.jpg}}">
              </div>

              {{!--
              <h5 class="card-title">Example</h5>
              <p>
                <strong>ID</strong>: {{example.id}}</p>
              <p>
                <strong>Score</strong>: {{example.score}}</p>
              <p>
                <strong>Text</strong>: {{example.text}}</p>
              <p>
                <strong>Description:</strong> {{example.description}}</p>
              <a href="/">← Back To Home</a> --}}
            </div>
          </div>
        </div>

        <h1 class="text-center">LEADERBOARD</h1>
        <ul id="example-list" class="list-group">
          {{#each examples}}
          <li data-id="{{this.id}}" class="list-group-item text-center dispText">
            <a href="example/{{this.id}}">{{this.username}}</a>
            {{!--
            <button class="btn btn-danger float-right delete">ｘ</button> --}}
            <div class="text-center dispScore">{{this.score}}</div>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>